<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/drawerLayout">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="20dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:orientation="vertical"
                android:elevation="5dp">


                <TextView
                    android:text="Subject's Name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/extend_edit_tvSubjectName"/>

                <EditText
                    android:background="@drawable/edittext_modified"
                    android:padding="15dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textPersonName"
                    android:textSize="14sp"
                    android:ems="10"
                    android:id="@+id/extend_edit_etSubjectName"/>

                <TextView
                    android:text="Subject's Code"
                    android:layout_marginTop="15sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/extend_edit_tvSubjectCode"/>

                <EditText
                    android:background="@drawable/edittext_modified"
                    android:padding="15dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textPersonName"
                    android:textSize="14sp"
                    android:ems="10"
                    android:id="@+id/extend_edit_etSubjectCode" />

                <TextView
                    android:text="Group"
                    android:layout_marginTop="15sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/extend_edit_tvSubjectGroup"/>

                <EditText
                    android:background="@drawable/edittext_modified"
                    android:padding="15dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textPersonName"
                    android:textSize="14sp"
                    android:ems="10"
                    android:id="@+id/extend_edit_etSubjectGroup" />

                <TextView
                    android:text="Classroom"
                    android:layout_marginTop="15sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/extend_edit_tvSubjectClass"/>

                <EditText
                    android:background="@drawable/edittext_modified"
                    android:padding="15dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textPersonName"
                    android:textSize="14sp"
                    android:ems="10"
                    android:id="@+id/extend_edit_etSubjectClass" />

                <TextView
                    android:text="Lecturer's Name"
                    android:layout_marginTop="15sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/extend_edit_tvLecturerName"/>

                <EditText
                    android:background="@drawable/edittext_modified"
                    android:padding="15dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textPersonName"
                    android:textSize="14sp"
                    android:ems="10"
                    android:id="@+id/extend_edit_etLecturerName" />

                <TextView
                    android:text="Lecturer's Contact"
                    android:layout_marginTop="15sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/extend_edit_tvLecturerContact"/>

                <EditText
                    android:background="@drawable/edittext_modified"
                    android:padding="15dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textPersonName"
                    android:textSize="14sp"
                    android:ems="10"
                    android:id="@+id/extend_edit_etLecturerContact" />




            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <android.support.design.widget.NavigationView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        app:menu="@menu/drawer_menu"
        android:layout_gravity="start"
        app:headerLayout="@layout/drawer_header">

    </android.support.design.widget.NavigationView>
</android.support.v4.widget.DrawerLayout>